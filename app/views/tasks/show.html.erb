<% if notice != nil %>
  <p id="notice">
    <div class="alert alert-success text-centered" role="alert">
      <p class="text-center"><%= notice %></p>
    </div>
  </p>
<% end %>

<div class="page-header">
  <h1><%= @task.description %></h1>
</div>

<ul class="breadcrumb">
  <li><%= link_to "Tasks", tasks_path %></li>
  <li class="active"> <%= @task.description %> </li>
</ul>

<% if @task.date != nil %>
  <div class="form-horizontal">
    <div class="form-group"></div>
    <div class="form-group">
      <div class="col-md-2"></div><strong><%= 'Due Date:' %></strong>
      <%= @task.date %>
    </div>

    <div class="form-group">
      <div class="col-md-2"></div><strong><%= 'Completed:' %></strong>
      <%= @task.completed %>
    </div>
  </div>
<% end %>
