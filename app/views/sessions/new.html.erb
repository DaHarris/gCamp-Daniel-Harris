<%= render 'errors/form' %>

<div class="page-header">
  <h1>Signin</h1>
</div>

<%= form_tag signin_path, class: "form-horizontal" do %>

  <form class="form-horizontal">
      <div class="form-group">
        <%= label_tag :email, nil,  class:  "control-label col-md-2" %>
        <div class="col-md-4">
          <%= email_field_tag :email, nil, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :password, nil, class: "control-label col-md-2" %>
        <div class="col-md-4">
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class = "col-md-offset-2 col-md-4">
          <%= submit_tag 'Signin', class: "btn btn-primary"  %>
          <%= link_to "Cancel", root_path, class: "btn btn-default" %>
        </div>
      </div>
  </form>

<% end %>
