<% if notice != nil %>
<p id="notice">
  <div class="alert alert-danger text-centered" role="alert">
    <p class="text-center"><%= notice %></p>
  </div>
</p>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" <%= link_to 'New Task', new_task_path %></a>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to "#{task.description}", task %></td>
        <td class="text-right">
          <a class="btn btn-info" <%= link_to 'Edit', edit_task_path(task) %>
          <a class="btn btn-danger" <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
