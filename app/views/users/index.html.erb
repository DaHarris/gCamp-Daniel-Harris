<% if notice != nil %>
<p id="notice">
  <div class="alert alert-success text-centered" role="alert">
    <p class="text-center"><%= notice %></p>
  </div>
</p>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" <%= link_to 'New User', new_user_path %></a>
  </div>
  <h1>Users</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.first_name}", user %></td>
        <td><a href="mailto:#"><%= user.email %></td>
        <td class="text-right">
        <a class="btn btn-info" <%= link_to 'Edit', edit_user_paloth(user) %>
        <a class="btn btn-danger" <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
