<% if notice != nil %>
<p id="notice">
  <div class="alert alert-danger text-centered" role="alert">
    <p class="text-center"><%= notice %></p>
  </div>
</p>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" <%= link_to 'New Task', new_project_task_path(@project) %></a>
  </div>
  <h1>Tasks for <%= @project.name %></h1>
</div>

<ul class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to "#{@project.name}", @project %></li>
  <li class="active">Tasks</li>
</ul>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to "#{task.description}", project_task_path(@project, task) %></td>
        <td class="text-right">
          <a class="btn btn-info" <%= link_to 'Edit', edit_project_task_path(@project, task) %>
          <a class="btn btn-danger" <%= link_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
