<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" <%= link_to 'Edit', edit_user_path(@user) %></a>
  </div>
  <h1><%= "#{@user.first_name}" + ' ' + "#{@user.last_name}" %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First Name</dt>
  <dd><%= @user.first_name %></dd>
  <br>
  <dt>Last Name</dt>
  <dd><%= @user.last_name %></dd>
  <br>
  <% if current_user == @user || current_user.project_member(@user) || admin%>
    <dt>Email</dt>
    <dd><a href="mailto:#"><%= @user.email %></dd>
  <% end %>
  <br>
</dl>
