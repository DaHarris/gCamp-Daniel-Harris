<div class="page-header">
  <h1><%= "#{@project.name}: Manage Members" %></h1>
</div>

<ul class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to "#{@project.name}", project_path(@project) %></li>
  <li class="active"><%= 'Memberships' %></li>
</ul>

<% if flash[:danger] %>
  <%= render 'errors/form' %>
<% end %>

<% if @project.memberships.where(owner: true, user_id: current_user.id) != [] %>
  <div class="well form-inline">
    <div class="row">
      <div class="col-md-12">
        <%= render 'new_form' %>
      </div>
    </div>
  </div>
<% end %>

<% if @project.memberships.where(owner: true, user_id: current_user.id) != [] %>
  <div class="form-inline">
    <%= render partial: "edit_form" %>
  </div>
<% else %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name:</th>
        <th>Type:</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @project.memberships.each do |mem| %>
          <td><%= mem.user.first_name %></td>
          <% if mem.owner == true %>
            <td>owner</td>
          <% else %>
            <td>member</td>
          <% end %>
          <% if current_user == mem.user %>
            <td><%= link_to project_membership_path(@project, mem), confirm: "Are you sure?", method: :delete do %>
              <span class="glyphicon glyphicon-remove"></span></td>
            <% end %>
          <% else %>
            <td></td>
          <% end %>
          </tr>
        <% end %>
    </tbody>
  </table>

<% end %>
