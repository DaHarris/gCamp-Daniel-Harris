<% if notice != nil %>
  <p id="notice">
    <div class="alert alert-success text-centered" role="alert">
      <p class="text-center"><%= notice %></p>
    </div>
  </p>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" <%= link_to 'New Project', new_project_path %></a>
  </div>
  <h1>Projects</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks:</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to "#{project.name}", project %></td>
        <td><%= link_to "#{project.tasks.size}", project_tasks_path(project) %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
