<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-horizontal">
  <div class="form-group"></div>
  <div class="form-group">
    <div class="control-label col-md-2"><%= f.label :description %></div>
    <div class="form-controls col-md-4">
      <input class="form-control" id="task_description" name="task[description]" type="text">
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-2"><%= f.label 'Due Date:' %></div>
    <div class="form-controls col-md-4">
        <%= f.date_field(:date) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-4">
      <% if @task.description == nil %>
        <input class="btn btn-primary" name="commit" type="submit" value="Create Task">
      <% else %>
        <input class="btn btn-primary" name="commit" type="submit" value="Update Task">
      <% end %>
      <a class="btn btn-default" <%= link_to 'cancel', tasks_path %>
    </div>
  </div>
</div>
<% end %>
